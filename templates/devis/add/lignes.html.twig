{% extends 'base.html.twig' %}

{% block title %}Nouveau devis : PlacoCompta{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12" id="principal">
            <h2>Assistant de création de devis</h2>
            <h6>Contenu du devis</h6>
            <hr>
            <form method="POST" action="/quote/add/ligne">
                <table class="table table-hover">
                    <thead>
                        <th scope="col"></th>
                        <th scope="col">Catégorie</th>
                        <th scope="col">Désignation</th>
                        <th scope="col">Prix unitaire</th>
                        <th scope="col">Quantité</th>
                        <th scope="col">Remise P.U</th>
                        <th scope="col">TVA de l'article</th>
                    </thead>
                    <tbody>
                        {% for categorie in categories %}
                            <tr class="table-active">
                                <td></td>
                                <td scope="row">{{ categorie.libelle }}</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            {% if categorie.materiauxes|length > 0 %}
                                {% for materiaux in categorie.materiauxes %}
                                <tr>
                                <td></td> 
                                <td></td> 
                                <td>{{ materiaux.Designation }}</td> 
                                <td>{{ materiaux.PrixUnitaire }}€</td> 
                                <td><input type="text" name="qte"></input></td> 
                                <td><input type="text" name="remise"></input></td> 
                                <td></td> 
                                </tr>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </form>
        </div>
    </section>
</main>

{% endblock %}