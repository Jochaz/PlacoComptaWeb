<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('build/images/IconePng.ico') }}">
        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
       {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">PlacoCompta</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                    <a class="nav-link" href="/customers">Client</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/material">Matériaux</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/quote">Devis</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/invoice">Facture</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/logout">Se déconnecter</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-sm-2" type="search" placeholder="N° Devis, facture...">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
                </form>
                </div>
            </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
