{% extends 'base.html.twig' %}

{% block title %}Client particulier : PlacoCompta{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12" id="principal">
            <div class="sidenav">    
             <h5>Panneau de gestion</h5>
                <a href="/customer/add"><button type="button" class="btn btn-info">Nouveau client</button></a>
                <br />
                 <hr>
                {% include "_partials/_searchparticulier_data.html.twig"%} 
                  
            </div>

          
            <div class="main">
                <h2>Liste des clients particulier</h2>
                {% if pagination|length > 0 %}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nom du client</th>
                            <th scope="col">Adresse email</th>
                            <th scope="col">Numéro de téléphone portable</th>
                            <th scope="col">Numéro de téléphone fixe</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for particulier in pagination %}
                        <tr onclick="window.location='/customer/detail/{{particulier.id}}'">
                            <th scope="row">{{particulier.nom}} {{particulier.prenom}}</th>
                            <td>{{particulier.adresseemail1}}</td>
                            <td>{{particulier.numerotelephoneportable1}}</td>
                            <td>{{particulier.numerotelephonefixe1}}</td>
                        </tr>
                        </a>
                        {% endfor %}
                    </tbody>
                </table>   
                <hr> 
                <br />   
                <div class="navigation flex justify-center mb-8">              
                    {{ knp_pagination_render(pagination)}}
                </div>
                {% else %}
                <div class="navigation flex justify-center mb-8">              
                    <p>Aucun client particulier n'a été trouvé.</p>
                </div>   
                {% endif %}
            </div>
        </div>
    </section>
</main>     

{% endblock %}