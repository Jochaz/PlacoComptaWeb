{% extends 'base.html.twig' %}

{% block title %}Facture : PlacoCompta{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12" id="principal">
            <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
                <i class="fa-solid fa-bars"></i>
            </button>
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasMenuLabel">Panneau de configuration</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="list-group">
                        {% if peutCreerDevis %}
                            <a href="/invoice/add/info" class="list-group-item list-group-item-action"><i class="fa-solid fa-file-circle-plus"></i> Nouvelle facture</a>
                        {% else %}
                            <p>Impossible de créer une facture car il n'y a pas de matériaux de créé ou de modèle de pièce.</p> 
                        {% endif %}
                        <br />
                        <hr>
                        {% include "facture/_partials/_search_facture_data.html.twig" %} 
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12" id="principal">
            <h2>Liste des factures</h2>
            {% if pagination|length > 0 %}
            <div class="container">
                <div class="row">
                    {% for facture in pagination %}
                    <div class="col-md-6 col-lg-3" onclick="window.location='/invoice/detail/{{facture.id}}'" style="margin-bottom:10px">
                        <div class="card shadow-sm border-light mb-4 h-100">
                            <div class="card-body"  id="div-card-listing">
                                <h5 class="font-weight-normal">Facture n°{{facture.NumFacture}}</h5>
                                <span class="{{facture.EtatDocument.Badge}}">{{facture.EtatDocument.Nom}}</span>
                                <p class="fst-italic fs-6">{{facture.DateFacture|date('d/m/Y')}}</p>
                        
                                {% if facture.particulier %}
                                <a href="/customer/detail/{{facture.particulier.id}}" style="text-decoration: none;">
                                    <h6 class="font-weight-normal"><i class="fa-solid fa-user mr-2"></i> {{facture.particulier.nom}} {{facture.particulier.prenom}}</h5>
                                </a>
                                {% else %}
                                <a href="/professional/detail/{{facture.professionnel.id}}">
                                    <h6 class="font-weight-normal"><i class="fa-solid fa-user-tie mr-2"></i> {{facture.professionnel.NomSociete}}</h5>
                                </a>
                                {% endif %}
                                {% if facture.AddressChantierIsFacturation %}
                                    <div class="post-meta"><span class="small lh-120"><i class="fas fa-map-marker-alt mr-2"></i> Chantier et facturation : {{facture.AdresseFacturation.Ligne1}}, {{facture.AdresseFacturation.CP}}, {{facture.AdresseFacturation.Ville}}</span></div>
                                {% else %}
                                    {% if facture.AdresseChantier %}
                                    <div class="post-meta"><span class="small lh-120"><i class="fas fa-map-marker-alt mr-2"></i> Chantier : {{facture.AdresseChantier.Ligne1}}, {{facture.AdresseChantier.CP}}, {{facture.AdresseChantier.Ville}}</span></div>
                                    {% else %}
                                    <div class="post-meta"><span class="small lh-120"><i class="fas fa-map-marker-alt mr-2"></i> Sans adresse de chantier</span></div>
                                    {% endif %}
                                    {% if facture.AdresseFacturation %}
                                    <div class="post-meta"><span class="small lh-120"><i class="fas fa-map-marker-alt mr-2"></i> Facturation : {{facture.AdresseFacturation.Ligne1}}, {{facture.AdresseFacturation.CP}}, {{facture.AdresseFacturation.Ville}}</span></div>
                                    {% endif %}
                                 {% endif %}
                                <div class="d-flex justify-content-between">
                                    <div class="col pl-0"><span class="text-muted font-small d-block mb-2">Prix HT</span> <span class="h6 text-dark font-weight-bold">{{facture.PrixHT}}€</span></div>
                                    <div class="col"><span class="text-muted font-small d-block mb-2">Prix TTC</span> <span class="h6 text-dark font-weight-bold">{{facture.PrixTTC}}€</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            {#<table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">N° de facture</th>
                        <th scope="col">Client</th>
                        <th scope="col">Prix HT</th>
                        <th scope="col">Prix TTC</th>
                        <th scope="col">Date facture</th>
                    </tr>
                </thead>
                <tbody>
                    {% for facture in pagination %}
                    <tr onclick="window.location='/invoice/detail/{{facture.id}}'">
                        <th scope="row">{{facture.NumFacture}}</th>
                        {% if facture.particulier %}
                        <td>{{facture.particulier.nom}} {{facture.particulier.prenom}}</td>
                        {% else %}
                            {% if facture.professionnel %}
                                <td>{{facture.professionnel.NomSociete}}</td>
                            {% else %}
                                <td>Erreur</td>
                            {% endif %}
                        {% endif %}
                        <td>{{facture.PrixHT}}€</td>
                        <td>{{facture.PrixTTC}}€</td>
                        <td>{{facture.DateFacture|date('d/m/Y')}}</td>
                    </tr>
                    </a>
                    {% endfor %}
                </tbody>
            </table>    #}
            <hr> 
            <br />   
            <div class="navigation flex justify-center mb-8">              
                {{ knp_pagination_render(pagination)}}
            </div>
            {% else %}
            <div class="navigation flex justify-center mb-8">              
                <p>Aucune facture n'a été trouvé.</p>
            </div>   
            {% endif %}
    
        </div>
    </section>
</main>     

{% endblock %}