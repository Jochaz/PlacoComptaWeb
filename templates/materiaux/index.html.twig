{% extends 'base.html.twig' %}

{% block title %}Matériaux : PlacoCompta{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12" id="principal">
            <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
                <i class="fa-solid fa-bars"></i>
            </button>
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasMenuLabel">Panneau de configuration</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="list-group">
                        <a href="/material/add" class="list-group-item list-group-item-action"><i class="fa-solid fa-screwdriver-wrench"></i> Nouveau matériaux</a>
                    </div>
                    <hr>
                    {% include "_partials/_search_data.html.twig"%} 
                </div>
            </div>
        </div>
        <div class="col-12" id="principal">          
            <h2>Liste des matériaux</h2>
            {% if pagination|length > 0 %}
            <div class="container">
                <div class="row">
                    {% for materiaux in pagination %}
                    <div class="col-md-6 col-lg-3" onclick="window.location='/material/detail/{{materiaux.id}}'" style="margin-bottom:10px">
                        <div class="card shadow-sm border-light mb-4 h-100">
                            <div class="card-body"  id="div-card-listing">
                                <h5 class="font-weight-normal">{{materiaux.Designation}}</h5>
                                <p class="fst-italic fs-6">{{materiaux.Categorie.Libelle}}</p>
                    
                                <div class="post-meta"><span class="small lh-120">{{materiaux.TVA.Libelle}} {{materiaux.TVA.Taux}}%</span></div>
                                <div class="d-flex justify-content-between">
                                    <div class="col pl-0"><span class="text-muted font-small d-block mb-2">Prix achat</span> <span class="h6 text-dark font-weight-bold">{{materiaux.PrixAchat}}€</span></div>
                                    <div class="col"><span class="text-muted font-small d-block mb-2">Prix unitaire</span> <span class="h6 text-dark font-weight-bold">{{materiaux.PrixUnitaire}}€</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            {# <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Désignation</th>
                        <th scope="col">Prix d'achat</th>
                        <th scope="col">Prix unitaire</th>
                        <th scope="col">TVA</th>
                        <th scope="col">Catégorie</th>
                    </tr>
                </thead>
                <tbody>
                    {% for materiaux in pagination %}
                    <tr onclick="window.location='/material/detail/{{materiaux.id}}'">
                        <th scope="row">{{materiaux.Designation}}</th>
                        <td>{{materiaux.PrixAchat}}€</td>
                        <td>{{materiaux.PrixUnitaire}}€</td>
                        <td>{{materiaux.TVA.Libelle}} {{materiaux.TVA.Taux}}%</td>
                        <td>{{materiaux.Categorie.Libelle}}</td>
                    </tr>
                    </a>
                    {% endfor %}
                </tbody>
            </table>    #}
            <hr> 
            <br />   
            <div class="navigation flex justify-center mb-8">              
                {{ knp_pagination_render(pagination)}}
            </div>
            {% else %}
            <div class="navigation flex justify-center mb-8">              
                <p>Aucun matériaux n'a été trouvé.</p>
            </div>   
            {% endif %}
        </div>
    </section>
</main>     

{% endblock %}