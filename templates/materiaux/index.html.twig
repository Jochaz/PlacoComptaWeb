{% extends 'base.html.twig' %}

{% block title %}Matériaux : PlacoCompta{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12" id="principal">
            <div class="sidenav">    
                <h5>Panneau de gestion</h5>
                <a href="/material/add"><button type="button" class="btn btn-info">Nouveau</button></a>
                <br />
                 <hr>
                    {% include "_partials/_search_data.html.twig"%} 
               
         
            </div>

          
            <div class="main">
                <h2>Liste des matériaux</h2>
                {% if pagination|length > 0 %}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Désignation</th>
                            <th scope="col">Prix d'achat</th>
                            <th scope="col">Prix unitaire</th>
                            <th scope="col">TVA</th>
                            <th scope="col">Catégorie</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for materiaux in pagination %}
                        <tr onclick="window.location='/material/detail/{{materiaux.id}}'">
                            <th scope="row">{{materiaux.Designation}}</th>
                            <td>{{materiaux.PrixAchat}}€</td>
                            <td>{{materiaux.PrixUnitaire}}€</td>
                            <td>{{materiaux.TVA.Libelle}} {{materiaux.TVA.Taux}}%</td>
                            <td>{{materiaux.Categorie.Libelle}}</td>
                        </tr>
                        </a>
                        {% endfor %}
                    </tbody>
                </table>   
                <hr> 
                <br />   
                <div class="navigation flex justify-center mb-8">              
                    {{ knp_pagination_render(pagination)}}
                </div>
                {% else %}
                <div class="navigation flex justify-center mb-8">              
                    <p>Aucun matériaux n'a été trouvé.</p>
                </div>   
                {% endif %}
            </div>
        </div>
    </section>
</main>     

{% endblock %}